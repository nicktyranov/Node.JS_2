<form action='' method='post'>
	<input type='text' name='name' id='' placeholder='Enter the name of a reminder (action)' />
	<br />
	<input type='date' name='date' id='' placeholder='Enter the date of the event' />
	<button type='submit'>add this reminder</button>
</form> }}